<%- include header %>
    <div class="row">
            <h1 style="text-align: center">Sign Up</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/customer/register" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="username" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="username" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="password" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="address" name="address" placeholder="address" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="phone" name="phone" placeholder="phone" required>
                    </div>
                    <select name="gender" id="">
                            <option value="male">male</option>
                            <option value="female">female</option>
                    </select>
                    <div class="form-group">
                        <button class="btn btn-lg btn-info btn-block">Register</button>
                    </div>
                </form>
                <a href="/">Back</a>
            </div>
        </div>
<%- include footer %>